<%- include('../parts/layout-start', {title}) %>
<%- include('../parts/menu') %>

<h1><%= title %></h1>

<div class="row">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-body">

                <h5 class="card-title">Title: <%= book.title %></h5>
                <p class="card-text">Description: <%= book.description %></p>
                <p class="card-text">Authors: <%= book.authors %></p>
                <p class="card-text">fileCOver: <%= book.fileCover %></p>
                <p class="card-text">fileName: <%= book.fileName%></p>
                <p class="card-text">favorite: <%= book.favorite ? 'да' : 'нет' %></p>
                <div class="text-right">
                    <a class="btn btn-sm btn-success" href="/books/<%= book.id %>/download">
                        <i class="fa fa-download" aria-hidden="true"></i>
                    </a>
                    <a class="btn btn-sm btn-primary" href="/books/<%= book.id %>/update">
                        <i class="fa fa-pencil" aria-hidden="true"></i>
                    </a>
                    <form action="/books/<%= book.id %>/delete" method="POST" class="d-inline">
                        <button class="btn btn-sm btn-danger">
                            <i class="fa fa-trash" aria-hidden="true"></i>
                        </button>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>

<%- include('../parts/layout-end') %>